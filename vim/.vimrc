syntax on

" Basic config
set noerrorbells
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set nu rnu
set nowrap
set smartcase
set smartindent
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch

set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgray
